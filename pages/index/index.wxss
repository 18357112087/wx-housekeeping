/**index.wxss**/
.serviceList {
  display:flex;
  flex-flow:row wrap;
  justify-content: space-between;
  box-sizing:border-box;
  background: #fff;
  border-top: 1px solid #eee;
}

.serviceList-item {
  width: 250rpx;
  box-sizing: border-box; 
  padding:20rpx 0;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  text-align: center;
}
.serviceList-item:nth-of-type(3n) {
   border-right:0; 
}

.serviceList image {
   width:120rpx; 
   height:120rpx; 
}

.service-title {
  margin-top:10rpx;
  font-size:26rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
  display:block;
  line-height:26rpx;
  color:#333;
  font-weight:500;
}

.bannerList {
  width:100%;
  height:330rpx;
  margin-bottom:8rpx;
}
.bannerList-item {
  position:relative;
}
.bannerList-item .bannerList-pic {
  width:100%;
  height:330rpx;
}

contact-button {
  position: fixed;
  right:20rpx;
  bottom:20%;
}

/*lazyload*/
@keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}

.fade_in {
    animation: fadeIn 1s both;
}
